<main class="wrapper-sign-up wrapper--w680">
    <div class="card card-4">
        <h2 class="title">Đăng ký</h2>
        <div class="card-body">
            <h6>Lưu ý: Đăng ký để có thể đặt vé online</h6>
            <div class="format">
                <form method="POST" action="/auth/Signup">
                    <div class="row row-space">
                        <div class="input-group">
                            <input class="input-style" type="email" id="email" placeholder="Nhập email" name="email">
                        </div>
                        <div class="input-group">
                            <input class="input-style" type="tel" id="tel" placeholder="Nhập số điện thoại" name="phone">
                        </div>
                        <div class="input-group">
                            <input class="input-style pass" type="password" id="password" placeholder="Nhập mật khẩu"
                                required name="password">
                        </div>
                        <div class="input-group">
                            <input class="input-style pass" type="password" id="confirmpassword"
                                placeholder="Xác nhận mật khẩu" required name="confirmPassword">
                        </div>
                        <div class="input-group">
                            <button class="signup-button btn--radius-2 btn-primary-2" type="submit">Tạo tài
                                khoản</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</main>