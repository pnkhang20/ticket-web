<main class="wrapper-sign-up wrapper--w680">
  <div class="card card-4">
    <h2 class="title">Đăng nhập</h2>
    <div class="card-body">
      <div class="format">
        <form method="POST" action="/auth/UpdatePass">
          <div class="row row-space">
            <div class="input-group">
              <input class="input-style" type="password" id="password" placeholder="Nhập mật khẩu mới" required name="password">
            </div>
             <div class="input-group">
              <input class="input-style" type="password" id="password_confirm" placeholder="Xác nhận mật khẩu" required name="password_confirm">
            </div>
            <div class="input-group">
              <button class="signup-button btn-radius-2 btn-primary-2 d-flex justify-content-center align-items-center text-decoration-none"
                type="submit">Đăng Nhập</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</main>